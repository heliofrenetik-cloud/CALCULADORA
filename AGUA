<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Calculadora de Água Diária</title>
</head>
<body>
  <h1>Calculadora de Água Diária</h1>
  <label for="peso-agua">Peso (kg): </label>
  <input type="number" id="peso-agua">
  <br><br>
  <button onclick="calcularAgua()">Calcular Quantidade de Água</button>
  <h3 id="resultado-agua"></h3>

  <script>
    function calcularAgua() {
      const peso = parseFloat(document.getElementById('peso-agua').value);

      if (isNaN(peso) || peso <= 0) {
        document.getElementById('resultado-agua').innerHTML = 'Por favor, insira um valor válido para o peso.';
        return;
      }

      const quantidadeAgua = peso * 35; // 35 ml por kg de peso
      document.getElementById('resultado-agua').innerHTML = Você deve beber cerca de ${quantidadeAgua} ml de água por dia.;
    }
  </script>
</body>
</html>